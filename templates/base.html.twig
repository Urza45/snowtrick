<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		<!-- Place your kit's code here --><script src="https://kit.fontawesome.com/0b80b0b83d.js" crossorigin="anonymous"> </script>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<header>
			<!-- Navigation-->
			<nav class="navbar navbar-expand-lg bg-secondary text-uppercase" id="mainNav">
				<div class="container">
					<a class="navbar-brand text-white" href="#page-top">
						<img src="{{ asset('medias/Snowboarding_pictogram.svg') }}" alt="Snowtricks" width="50px"/>
					</a>
					<h1>Sowtricks</h1>
					{% if app.user %}
						<p>You are logged in as</p>
						{{ app.user.username }}
					{% endif %}
					<button class="navbar-toggler text-uppercase font-weight-bold bg-primary text-white rounded" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
						Menu
						<i class="fas fa-bars"></i>
					</button>
					<div class="collapse navbar-collapse" id="navbarResponsive">
						<ul class="navbar-nav ms-auto">
							<li class="nav-item mx-0 mx-lg-1">
								<a class="nav-link py-3 px-0 px-lg-3 rounded" href="{{ path('trick_home') }}">Accueil</a>
							</li>
							<li class="nav-item mx-0 mx-lg-1">
								<a class="nav-link py-3 px-0 px-lg-3 rounded" href="{{ path('trick_home') }}#tricks">Figures</a>
							</li>
							{% if app.user %}
								<li class="nav-item mx-0 mx-lg-1">
									<div class="mb-3">
										<a class="nav-link py-3 px-0 px-lg-3 rounded" href="{{ path('app_logout') }}">Se déconnecter</a>
									</div>
								</li>
							{% else %}
								<li class="nav-item mx-0 mx-lg-1">
									<a class="nav-link py-3 px-0 px-lg-3 rounded" href="{{ path('app_login') }}">Se connecter</a>
								</li>
								<li class="nav-item mx-0 mx-lg-1">
									<a class="nav-link py-3 px-0 px-lg-3 rounded" href="{{ path('app_register') }}">S'enregistrer</a>
								</li>
							{% endif %}
						</ul>
					</div>
				</div>
			</nav>
		</header>
		{% block body %}{% endblock %}
	</body>
</html>
