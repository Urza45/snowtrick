{% extends 'base.html.twig' %}

{% block title %}
	Bienvenu(e) sur SNOwTRICKS
{% endblock %}

{% block body %}
	<br/>
	<section class="bg-secondary p-2 text-dark bg-opacity-50">
		<div class="container container-fluid">
			<div class="row justify-content-evenly">
				<div class="col-lg-10">
					<div class="table-responsive">
						<table
							class="table table-light table-responsive table-borderless">
							{# table-bordered  table-striped  table-condensed#}
							<thead></thead>
							<tr class="text-center">
								<td>
									<div class="contenant">
										{% if trick.media.count is same as(0) %}
											<img src="{{ asset('medias/snow.jpg') }}" class="img-fluid" alt="Pas d'image">
										{% endif %}
										<div class="texte_centrer bg-secondary bg-opacity-50">
											<h1>{{ trick.title}}
											</h1>
											<a class="text-light" href="{{ path('modify_trick' , { id: trick.id }) }}">
												<i class="fa-solid fa-pencil"></i>
											</a>
											<a class="text-danger" href="#">
												<i class="fa-solid fa-trash-can"></i>
											</a>
										</div>
									</div>
								</td>
							</tr>
							<tr>
								<td>
									<div class="row text-center align-items-center">

										<div class="col-lg-12">
											{% include "trick/carousel.html.twig" %}
										</div>
									</div>
								</td>
							</tr>
							<tr>
								<td>
									{{ trick.chapo }}
								</td>
							</tr>
							<tr>
								<td>{{ trick.content }}</td>
							</tr>
							<tr>
								<td class="text-center">
									<button class="btn btn-info disabled">
										<i class="fa-solid fa-calendar-days"></i>
										Crée le
										{{ trick.createdAt|date('d/m/Y') }}
									</button>
									<button class="btn btn-info disabled">
										<i class="fa-solid fa-user"></i>
										Auteur :
										{{ trick.user.firstName }}
										{{ trick.user.lastName }}</button>
									{% if trick.createdAt != trick.updatedAt %}
										<button class="btn btn-info disabled">Date de dernière modification :
											{{ trick.updatedAt|date('d/m/Y') }}
										</button>
									{% endif %}
									<button class="btn btn-info disabled">Catégorie :
										{{ trick.category.label }}</button>
								</td>
							</tr>
							<tr>
								<td><hr></td>
							</tr>
							<tr>
								<td>Ici le formulaire de commentaires</td>
							</tr>
							<tr>
								<td>
									Les commentaires
								</td>
							</tr>
						</table>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
