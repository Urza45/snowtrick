<div class="container text-center my-3">
	<div class="row mx-auto my-auto justify-content-center">
		{% if trick.media.count is same as(0) %}
			<p>Pas de m√©dia disponible.</p>
		{% else %}
			<div id="recipeCarousel" class="carousel slide text-dark" data-bs-ride="carousel">
				<div class="carousel-inner" role="listbox">
					{% set i = 1 %}
					{% for picture in pictures %}
						{% if i == 1 %}
							<div class="carousel-item active">
								{% set i = 0 %}
							{% else %}
								<div class="carousel-item">
								{% endif %}
								<div class="col-md-3">
									<div class="card">
										<div class="card-img">
											<img src="{{ asset(picture.thumbUrl) }}" width="500px" class="img-fluid">
										</div>
										<div class="card-body">
											{{ picture.legend }}<br/>
											<button class="btn userinfo" data-toggle="modal" data-bs-target="#exampleModal" data-button="Enregistrer" data-id="{{ picture.id }}" data-affiche="yes" data-route="{{ path('app_media') }}" data-title="{{ picture.legend }}">
												<i class="fa-solid fa-eye"></i>
											</button>
											{% if app.user %}
												<button class="btn userinfo" data-toggle="modal" data-bs-target="#exampleModal" data-button="Enregistrer" data-id="{{ picture.id }}" data-affiche="yes" data-route="{{ path('app_modif_media') }}" data-title="{{ picture.legend }}">
													<i class="fa-solid fa-pencil"></i>
												</button>
												<button class="btn userinfo text-danger" data-toggle="modal" data-bs-target="#exampleModal" data-button="Enregistrer" data-id="{{ picture.id }}" data-affiche="yes" data-route="{{ path('app_delete_media') }}" data-title="{{ picture.legend }}">
													<i class="fa-solid fa-trash-can"></i>
												</button>
											{% endif %}
										</div>
									</div>
								</div>
							</div>
						{% endfor %}
						{% for video in videos %}
							{% if i == 1 %}
								<div class="carousel-item active">
									{% set i = 0 %}
								{% else %}
									<div class="carousel-item">
									{% endif %}
									<div class="col-md-3">
										<div class="card">
											<div class="card-img">
												<br/>
												{{ video.thumbUrl|raw }}
												<br/><br/>
											</div>
											<div class="card-body">
												{{ video.legend }}<br/>
												<button class="btn userinfo" data-toggle="modal" data-bs-target="#exampleModal" data-button="Enregistrer" data-id="{{ video.id }}" data-affiche="yes" data-route="{{ path('app_media') }}" data-title="{{ video.legend }}">
													<i class="fa-brands fa-youtube"></i>
												</button>
												{% if app.user %}
													<button class="btn userinfo" data-toggle="modal" data-bs-target="#exampleModal" data-button="Enregistrer" data-id="{{ video.id }}" data-affiche="yes" data-route="{{ path('app_modif_media') }}" data-title="{{ video.legend }}">
														<i class="fa-solid fa-pencil"></i>
													</button>
													<button class="btn userinfo text-danger" data-toggle="modal" data-bs-target="#exampleModal" data-button="Enregistrer" data-id="{{ video.id }}" data-affiche="yes" data-route="{{ path('app_delete_media') }}" data-title="{{ video.legend }}">
														<i class="fa-solid fa-trash-can"></i>
													</button>
												{% endif %}
											</div>
										</div>
									</div>
								</div>
							{% endfor %}
						</div>
						<a class="carousel-control-prev bg-transparent w-aut h-25" href="#recipeCarousel" role="button" data-bs-slide="prev">
							<span class="carousel-control-prev-icon" aria-hidden="false"></span>
						</a>
						<a class="carousel-control-next bg-transparent w-aut h-25" href="#recipeCarousel" role="button" data-bs-slide="next">
							<span class="carousel-control-next-icon" aria-hidden="true"></span>
						</a>
					</div>
				{% endif %}
			</div>
		</div>
