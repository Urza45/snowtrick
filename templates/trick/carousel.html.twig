<div class="container text-center my-3">
	<div class="row mx-auto my-auto justify-content-center">
		{% if trick.media.count is same as(0) %}
			<p>Pas de m√©dia disponible.</p>
		{% else %}
			<div id="recipeCarousel" class="carousel slide" data-bs-ride="carousel">
				<div class="carousel-inner" role="listbox">
					{% set i = 1 %}
					{% for picture in pictures %}
						{% if i == 1 %}
							<div class="carousel-item active">
								{% set i = 0 %}
							{% else %}
								<div class="carousel-item">
								{% endif %}
								<div class="col-md-3 d-block h-50">
									<div class="card">
										<div class="card-img">
											<img src="{{ asset(picture.url) }}" class="img-fluid"></a>
									</div>
									<div class="card-img-overlay ">
										<div class="bg-secondary p-2  bg-opacity-50">
											{{ picture.legend }}<br/>
											<a class="text-light" href="{{ path('show_trick' , { slug: trick.slug }) }}">
												<i class="fa-solid fa-eye text-light"></i>
											</a>
											{% if app.user %}
												<a class="text-light" href="{{ path('show_trick' , { slug: trick.slug }) }}">
													<i class="fa-solid fa-pencil"></i>
												</a>
												<a class="text-danger" href="#">
													<i class="fa-solid fa-trash-can"></i>
												</a>
											{% endif %}
										</div>
									</div>
								</div>
							</div>
						</div>
					{% endfor %}
					{% for video in videos %}{% endfor %}
				</div>
				<a class="carousel-control-prev bg-transparent w-aut" href="#recipeCarousel" role="button" data-bs-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				</a>
				<a class="carousel-control-next bg-transparent w-aut" href="#recipeCarousel" role="button" data-bs-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
				</a>
			</div>
		{% endif %}
	</div>
</div>
