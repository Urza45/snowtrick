<div class="container container-fluid">
	<div class="row justify-content-evenly align-items-center">
		<div class="col-lg-8 col-12">
			<p class="statusMsg"></p>
			{{ form_start(form, { attr: {'name' : 'formModal', 'id' : 'formModal', 'role' : 'form', 'accept-charset' : 'utf-8' }}) }}
			<div class="form-group">
				Interdir ce commentaire ?
				<p>{{ comment.content }}</p>
				{% for child in form.disabled %}
					{{- form_label(child, null) -}}&nbsp;
					{{- form_widget(child) -}}&nbsp;
				{% endfor %}
				<input type="hidden" name="userId" id="userId" value="{{ comment.id }}">
				<input type="hidden" name="nameForm" id="nameForm" value="banUser">
				<input type="hidden" name="route" id="route" value="{{ path('app_managing_ban_comment', { id: comment.id }) }}">
			</div>
			{{ form_rest(form) }}
			{{ form_end(form) }}
		</div>
	</div>
</div>
