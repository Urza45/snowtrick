<div class="container container-fluid">
	<div class="row">
		<div class="col-lg-12">
			{{ form_start(form, { attr: {'action': '{{ path("app_ban_user", { slug: user.slug }) }}', 'accept-charset' : 'utf-8' }}) }}
			<div class="form-group">
				{% for child in form.activatedUser %}
					<div class="">
						{{- form_widget(child) -}}
						{{- form_label(child, null) -}}
					</div>
				{% endfor %}
				{#{ form_widget(form.send, {'label': "Changer le mot de passe", 'attr' : { 'class': 'btn btn-primary' }}) }#}
			</div>
			{{ form_rest(form) }}
			{{ form_end(form) }}
		</div>
	</div>
</div>
