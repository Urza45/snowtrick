{% extends 'base.html.twig' %}

{% block title %}
	Gestion des utilisateurs
{% endblock %}

{% block body %}
	<section class="bg-secondary p-2 text-dark bg-opacity-50">
		<div class="container container-fluid">
			<div class="row justify-content-evenly">
				<div class="col-lg-8">
					<div class="table-responsive text-center">
						<h3>Liste des membres du site</h3>
						<table class="table table-striped table-condensed table-responsive table-bordered">
							<thead>
								<tr class="text-center">
									<th>Pseudo</th>
									<th>Nom</th>
									<th>Pr√©nom</th>
									<th>
										<i class="fa-solid fa-envelope"></i>
									</th>
									<th>
										<i class="fa-solid fa-person-snowboarding"></i>
									</th>
									<th>
										<i class="fa-solid fa-comments"></i>
									</th>
									<th>Actions</th>
								</tr>
							</thead>
							{% for user in users %}
								<tr class="text-center">
									<td>
										<div class="tablehead">ID</div>
										{% if app.user.avatar %}
											<img src="{{ asset(app.user.avatar.url) }}" class="rounded-circle" height="40px"/>
										{% else %}
											<img src="{{ asset('medias/avatars/manProfil.jpg') }}" class="rounded-circle" width="40px" height="40px"/>
										{% endif %}
										{{ user.pseudo }}
									</td>
									<td>{{ user.lastName }}</td>
									<td>{{ user.firstName }}</td>
									<td>{{ user.email }}</td>
									<td>{{ user.tricks.count }}</td>
									<td>{{ user.comments.count }}</td>
									<td>
										<a class="btn btn-sm btn-primary" href="{{ path('app_managing_user', { slug: user.slug }) }}">
											<i class="glyphicon glyphicon-eye-open"></i>
											Voir son profil</a>
									</td>
								</tr>
							{% endfor %}
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>{% endblock %}
